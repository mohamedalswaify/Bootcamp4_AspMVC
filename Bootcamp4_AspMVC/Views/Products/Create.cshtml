@model Product
@{
    ViewData["Title"] = "Create";
}

<h1>Add Product</h1>

<form method="post" asp-action="Create" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" name="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
   @*      <select asp-for="CategoryId" name="CategoryId" class="form-control" asp-items="@ViewBag.Categories" >
            <option selected value="">-- Select Category --</option>
  
            </select> *@


        <select asp-for="CategoryId" name="CategoryId" class="form-control" >
            <option selected value="">-- Select Category --</option>

            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }


        </select>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" name="Description" class="form-control"></textarea>

    </div>

    <div class="mb-3">
        <label for="ImageFile">Product Image</label>
        <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept=".jpg,.jpeg,.png,.gif,.webp" />
    </div>




    <button type="submit" class="btn btn-outline-primary">Save</button>
    <a asp-action="Index" class="btn btn-dark">Back</a>

</form>