@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="container-fluid">
     <div class="text-end">

        <a  asp-action="Create" class="btn btn-outline-primary">Add New</a>

    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Description</th>
                <th>Category</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in Model)
            {

                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Description</td>
                    <td>@product.Category?.Name</td>
                     <td>
                         <img src="@product.ImageUrl" width="200" height="150" />
                     </td>
                    <td>
                        <a asp-action="Edit" asp-route-Uid="@product.Uid" class="btn btn-outline-warning">Edit</a>
                        <a asp-action="Delete" asp-route-Uid="@product.Uid" class="btn btn-outline-danger">Delete</a>
                        </td>


                </tr>

            }


        </tbody>
    </table>
</div>
